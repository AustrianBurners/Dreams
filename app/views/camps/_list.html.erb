<div id="filterrific_results">

    <%=t :sort_by%>:
    <%= filterrific_sorting_link(@filterrific, :updated_at) %>

    <div class="camps_list">
        
        <% @camps.each do |camp| %>
            <%= render :partial => 'camps/card', locals: { camp: camp, display_desc: false, css_classes: "col-md-4" } %>
        <% end %>

    </div>
</div>
